<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF808080"
                android:endColor="#FF808080"
                android:angle="270" />
            <corners
                android:radius="50px" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF000000"
                android:startColor="#FF000000"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FF000000" />
            <corners
                android:radius="50px" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#FFFFFFFF"
                android:startColor="#FFFFFFFF"
                android:angle="270" />
            <corners
                android:radius="50px" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>