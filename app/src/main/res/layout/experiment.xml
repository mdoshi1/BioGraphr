<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500px"
    tools:context="com.example.lukas.euglenapatterns.ScienceActivity">

    <ImageButton
        android:id="@+id/choice1"
        android:layout_width="565px"
        android:layout_height="318px"
        android:src="@drawable/pattern2"
        android:layout_alignParentBottom="true"
        android:onClick="compare"
        />

    <ImageButton
        android:id="@+id/choice2"
        android:layout_width="565px"
        android:layout_height="318px"
        android:layout_toRightOf="@+id/choice1"
        android:layout_marginLeft="500px"
        android:src="@drawable/pattern1"
        android:layout_alignParentBottom="true"
        android:onClick="compare"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Game"
        android:textSize="80px"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/patterns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horizontal vs. Vertical"
        android:textSize="60px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        />

</RelativeLayout>
