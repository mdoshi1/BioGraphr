<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lukas.euglenapatterns.MainActivity"
    >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="980dp"
        android:layout_height="551dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:onClick="focus"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/drawing_pad"
        android:layout_width="980dp"
        android:layout_height="551dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edges"
        >
    </LinearLayout>

    <Button
        android:id="@+id/free_draw"
        android:layout_width="640px"
        android:layout_height="480px"
        android:background="@drawable/doodle"
        android:layout_toLeftOf="@+id/pattern_guessing"
        android:layout_marginRight="20px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:onClick="chooseItem"
        />

    <TextView
        android:id="@+id/text_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Explore"
        android:textStyle="bold"
        android:textSize="120px"
        android:layout_alignLeft="@+id/free_draw"
        android:layout_alignRight="@id/free_draw"
        android:gravity="center"
        android:clickable="true"
        android:onClick="chooseItem"
        />

    <Button
        android:id="@+id/pattern_guessing"
        android:layout_width="640px"
        android:layout_height="480px"
        android:background="@drawable/game"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:onClick="chooseItem"
        />

    <TextView
        android:id="@+id/text_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Game"
        android:textStyle="bold"
        android:textSize="120px"
        android:layout_alignLeft="@+id/pattern_guessing"
        android:layout_alignRight="@id/pattern_guessing"
        android:gravity="center"
        android:clickable="true"
        android:onClick="chooseItem"
        />

    <Button
        android:id="@+id/science"
        android:layout_width="640px"
        android:layout_height="480px"
        android:background="@drawable/science"
        android:layout_toRightOf="@+id/pattern_guessing"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20px"
        android:onClick="chooseItem"
        />

    <TextView
        android:id="@+id/text_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Science"
        android:textStyle="bold"
        android:textSize="120px"
        android:layout_alignLeft="@+id/science"
        android:layout_alignRight="@id/science"
        android:gravity="center"
        android:onClick="chooseItem"
        android:clickable="true"
        />

    <GridLayout
        android:id="@+id/adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        >

        <Button
            android:id="@+id/zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="movePattern"
            android:layout_toRightOf="@+id/left"
            />

        <Button
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UP"
            android:onClick="movePattern"
            />

        <Button
            android:id="@+id/zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:onClick="movePattern"
            android:layout_toRightOf="@+id/right"
            android:layout_below="@+id/zoom_in"
            />

        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEFT"
            android:onClick="movePattern"
            android:layout_toRightOf="@+id/up"
            />

        <Button
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOWN"
            android:onClick="movePattern"
            android:layout_below="@+id/up"
            />

        <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RIGHT"
            android:onClick="movePattern"
            android:layout_toRightOf="@+id/down"
            android:layout_below="@id/left"
            />

    </GridLayout>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_alignLeft="@+id/camera_preview"
        android:visibility="invisible"
        android:onClick="done"
        />
</RelativeLayout>